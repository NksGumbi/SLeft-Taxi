@model SLeft_Taxi.Models.Schedule
@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <h1>ShortLeft Taxi Reservation</h1>
    <p class="lead">Book Taxi rides at low costs and enjoy your journey</p>
</div>

@if (User.Identity.Name.Contains("admin@slt.com"))
{
    <h5>
        @Html.ActionLink("Modify Schedule", "Index", "Schedules") <br />
        @Html.ActionLink("Modify taxis Information", "Index", "Taxis")
    </h5>

}
<div class="row">
    <div class="col-md-4">
        <h2>Search Taxi</h2>
        <br />
        @using (Html.BeginForm("SearchResults", "Home", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {
            <fieldset>
                <div class="form-group">
                    <label class="col-md-2">Source: </label>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.source, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.source, "", new { @class = "text-danger" })
                        <br />
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-2">Destination: </label>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.destination, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.destination, "", new { @class = "text-danger" })
                        <br />
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-2">Date of Journey: </label>
                    <div class="col-md-10">
                        <input type="date" name="dateOfJourney" class="form-control" />
                        @Html.ValidationMessageFor(model => model.scheduleDate, "")
                        <br />
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" class="btn btn-default" value="submit" />
                    </div>
                </div>
            </fieldset>
        }
    </div>
    <div class="col-md-4">
        @Html.ActionLink("Booking Hisory", "Index", "Reservations")<br /><br />
        <img src="~/Content/birdsdoitpas.jpg" height="200" width="500">
    </div>
</div>
